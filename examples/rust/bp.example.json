{
  "version": 1,
  "stages": {
    "check": ["cli_example"],
    "test": [],
    "cli": ["cli_example"],
    "e2e": []
  },
  "tasks": {
    "cli_example": {
      "desc": "example CLI: rust JSON contract",
      "cmd": [
        "cargo",
        "run",
        "--quiet",
        "--manifest-path",
        "examples/rust/Cargo.toml",
        "--",
        "--json",
        "--stable",
        "--seed",
        "0"
      ],
      "timeout_ms": 30000,
      "expects": {
        "stdout": "json",
        "jq": "examples/rust/contracts/example.jq",
        "golden": "examples/rust/contracts/goldens/example.json"
      }
    }
  }
}
